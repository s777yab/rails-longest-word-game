<h1 class= text-center>New game</h1>
<div class="d-flex justify-content-around p-1">
<% @letters.each do |letter| %>
<div class="bg-primary rounded m-0 p-3 text-light"><p><%= letter %></p></div>
<% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <label>What is the Longest word you can make?</label>
  <div class="d-flex">
  <input class="form-control" type="text" name="word" placeholder="Longest Word Here...">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </div>
</form>
